generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id              Int          @id @default(autoincrement())
  email           String       @unique
  firstName       String?
  lastName        String?
  username        String       @unique
  ProvidedInfoFor ChurchInfo[]
}

model ChurchInfo {
  chrchName         String  @unique
  churchType        String?
  churchDescription String?
  editedBy          User?   @relation(fields: [userId], references: [id])
  userId            Int
}
